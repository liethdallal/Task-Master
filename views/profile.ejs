<h1 id="head">Your Tasks!</h1>
<% if (user && user.tasks.length === 0) { %>
  <p id="head">You have no tasks!</p>
<% } %>
<% if (user) { %>
    <% user.tasks.forEach(task => { %>
      <div class="tasks">
      <h2><%= task.title %></h2>
      <form action="/profile/remove/<%= task._id %>?_method=PUT" method="POST" >
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit">Delete</button>
      </form>
      </div>

    <% }); %>
  <h2 id="taskhead">Add a Task</h2>
  <form action="/profile" method="POST" >
  <div class='addtask'>
    <input type="text" name="title" class="form" placeholder="Task Title" required >
  </div>
    <br>
  <div class='addtask'>
      <button  type="submit">Add Task</button>
  </div>
  </form>
  <% } else { %>
    <p>Please login to start adding tasks</p>
    <% } %>
    



  
